    "reset": "bash ./tools/scripts/reset.sh",
    "clean": "rm -rf dist node_modules tmp",
    "start": "npx nx serve c2c",
    "build:c2c": "npx nx build c2c",
    "seed:c2c": "ts-node ./tools/scripts/seed.c2c.ts",
