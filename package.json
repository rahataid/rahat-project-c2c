    "migrate:dev:create": "prisma migrate dev --create-only --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:deploy": "npx prisma migrate deploy --preview-feature",
    "migrate:status": "npx prisma migrate status --preview-feature",
    "migrate:resolve": "npx prisma migrate resolve --preview-feature",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "contracts:docgen": "cd ./apps/contracts && hardhat docgen",
    "contracts:compile": "cd ./apps/contracts && hardhat compile",
    "contracts:coverage": "cd ./apps/contracts && hardhat coverage",
    "contracts:test": "cd ./apps/contracts && hardhat test",
    "contracts:prettier": "prettier --write 'src/contracts/**/*.sol'",
    "contracts:ignite:rahatToken": "cd ./apps/contracts && hardhat ignition deploy ignition/modules/RahatToken.ts --network baseSepolia",
    "contracts:generate:json": "cd ./apps/contracts && node ./scripts/generateStandardJson.js",
    "contracts:ignite:c2c": "cd ./apps/contracts && hardhat ignition deploy ignition/modules/C2CProject.ts --network baseSepolia",
    "contracts:deploy:mumbai": "cd ./apps/contracts && hardhat run scripts/deploy.js --network polygonMumbai",
    "graph:codegen": "cd ./apps/graph && graph codegen",
    "graph:build": "cd ./apps/graph && graph build",
    "graph:deploy": "cd ./apps/graph && graph deploy --node https://api.thegraph.com/deploy/ anupamakoirala/c2c",
    "graph:create-local": "cd ./apps/graph && graph create --node http://localhost:8020/ rahat/c2c",
    "graph:remove-local": "cd ./apps/graph && graph remove --node http://localhost:8020/ rahat/c2c",
    "graph:deploy-local": "cd ./apps/graph && graph deploy -l v0.0.1 --node http://localhost:8020/ --ipfs http://localhost:5001 --network mainnet  rahat/c2c",
    "graph:studio:deploy-mumbai": "cd ./apps/graph && graph deploy --studio --network mumbai c2c-dev",
    "graph:studio:deploy-arbitrum-sepolia-dev": "cd ./apps/graph && graph deploy --studio --network arbitrum-sepolia c2c-dev-arbi",
    "graph:studio:deploy-arbitrum-sepolia-stage": "cd ./apps/graph && graph deploy --studio --network arbitrum-sepolia c2c-stage-arbi",
    "graph:studio:deploy-base-sepolia": "cd ./apps/graph && graph deploy --studio --network base-sepolia rahat-c2c-dev",
    "graph:studio:deploy-stage-base-sepolia": "cd ./apps/graph && graph deploy --studio --network base-sepolia c2c-stage-base",
    "graph:studio:deploy-kotanipay-base": "cd ./apps/graph && graph deploy --studio --network base c2c-kenya-dryrun--kotanipay",
    "graph:test": "cd ./apps/graph && graph test",
    "fund:project": "ts-node  tools/project-scripts/2-fund-project",
    "charge:beneficiary": "ts-node  tools/project-scripts/3-beneficiary-manage",
    "test:c2c": "jest --config ./apps/c2c/jest.config.ts --coverage"

